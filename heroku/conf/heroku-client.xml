<?xml version="1.0" encoding="utf-8"?>
<Configure>
    <WorkerNode domain="" />
    <!-- Can config more than 1 hyk-proxy-server -->
    <!-- <WorkerNode appid="" user="" passwd=""  backendEnable="false"/> -->
    
	<!-- HTTP/RSOCKET-->
	<ConnectionMode>HTTP</ConnectionMode>

    <RSocketServer port="48101" />
	<!-- Warning:Don't modify the configurations below if you don't know the 
		meaning of them -->
	<!-- Advanced Options -->
	<!-- Send heart beat request every so many millis secs -->
	<HeartBeatPeriod>1000</HeartBeatPeriod>
    <!-- Max waiting HTTP response time(ms) -->
    <HTTPRequestTimeout>30000</HTTPRequestTimeout>
	<!--Avoid some edge case for full url path -->
	<!--This option is not active when through a unanonymouse local proxy -->
	<SimpleURLEnable>true</SimpleURLEnable>
	<!--Can choose from LZF/Snappy/FastLZ/QuickLZ/None -->
	<Compressor>None</Compressor>
	<!--Can choose from SE1/None -->
	<Encrypter>SE1</Encrypter>
	<ConnectionPoolSize>3</ConnectionPoolSize>
	<FetchLimitSize>512000</FetchLimitSize>
	<!-- for big file(>=1m) & video -->
	<ConcurrentRangeFetchWorker>3</ConcurrentRangeFetchWorker>

	<!-- If you want use hyk-proxy througth a proxy, config this item -->
	<LocalProxy type="HTTP" host=""/>

	<DomainBindings>
		<!--
		   <Binding domain="hyk-proxy-demo">
		        <site>twitter</site> 
		         <site>youtube</site> 
		   </Binding> 
		-->
	</DomainBindings>

	<!-- Sometimes, you already know you can inject a 'Range' header in the 
		proxy request to avoid a fail-try request. Use ';,|' as the separator for sites -->
    <InjectRangeHeader>
        <Site>.youtube.com</Site>
        <URL>.zip,.exe,.gz,.tar,.bz2,.tgz,.rar</URL>
    </InjectRangeHeader>
	

	<UserAgent>
      <![CDATA[
          Mozilla/5.0 (Windows; U; Windows NT 5.1; en-US) AppleWebKit/532.5 (KHTML, like Gecko) Chrome/4.1.249.1045 Safari/532.5
      ]]>
	</UserAgent>
	
</Configure>