<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<servlet>
		<servlet-name>HttpInvoke</servlet-name>
		<servlet-class>org.snova.c4.server.servlet.HTTPEventDispatcherServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>Index</servlet-name>
		<servlet-class>org.snova.c4.server.servlet.IndexServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>ClientPush</servlet-name>
		<servlet-class>org.snova.c4.server.servlet.v2.HTTPPushInvokeServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>ClientPull</servlet-name>
		<servlet-class>org.snova.c4.server.servlet.v2.HTTPPullInvokeServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ClientPull</servlet-name>
		<url-pattern>/invoke/pull</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>ClientPush</servlet-name>
		<url-pattern>/invoke/push</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>HttpInvoke</servlet-name>
		<url-pattern>/invoke</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>Index</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

</web-app>
